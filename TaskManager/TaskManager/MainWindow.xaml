<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"      
        Background="DarkTurquoise"
        Title="To-Do App" Height="311" Width="545">

    <Grid Margin="0,0,0,31">
        <TextBox Name="TaskTextBox" 
                 HorizontalAlignment="Left" 
                 Margin="65,10,0,0" 
                 VerticalAlignment="Top" 
                 Width="236" 
                 Height="30"
                 TextAlignment="Center"/>
        <Button Name="AddButton" 
                Content="Lägg till uppgift" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="94" 
                Height="30" 
                Margin="306,10,0,0" 
                Click="AddButton_Click"
                Background="LightGray"
                FontWeight="Medium"/>
        <ListBox Name="TasksListBox" 
                 HorizontalAlignment="Left" 
                 Margin="65,51,0,-20" 
                 Width="434"/>
        <Button Name="RemoveButton" 
                Content="Ta bort uppgift" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="94" 
                Height="30" 
                Margin="405,10,0,0" 
                Click="RemoveButton_Click"
                Background="LightGray"
                FontWeight="Medium" RenderTransformOrigin="0.343,0.628"/>
    </Grid>
</Window>
